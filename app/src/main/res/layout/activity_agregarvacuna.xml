<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".historial.AgregarvacunaActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@color/beige"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="70dp"
            android:text="Vacunas"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageM"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginVertical="10dp"
        android:layout_gravity="center"
        android:padding="20dp"
        android:background="@drawable/circle_background_especie"
        android:src="@drawable/vacuna_icono" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_menu"
                android:layout_marginBottom="15dp"
                android:paddingBottom="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="30dp">

                <EditText
                    android:id="@+id/et_vacuna"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/rounded_menu"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:paddingTop="10dp"
                    android:hint="Nombre vacuna"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@color/rosaPastel" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/Salmon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_menu"
                android:paddingBottom="15dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp">
                <EditText
                    android:id="@+id/et_fecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/rounded_menu"
                    android:gravity="center_horizontal"
                    android:paddingTop="10dp"
                    android:hint="Fecha"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@color/rosaPastel" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_menu"
                android:paddingBottom="15dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/et_dosis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/rounded_menu"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:hint="Dosis"
                    android:inputType="text"
                    android:paddingTop="10dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@color/rosaPastel" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_menu"
                android:paddingBottom="15dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/et_lote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/rounded_menu"
                    android:gravity="center_horizontal"
                    android:paddingTop="10dp"
                    android:hint="Lote de vacuna"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@color/rosaPastel" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_continuar"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/azulPastel"
                android:radius="8dp"
                android:text="Continuar"
                android:textColor="@color/black" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>