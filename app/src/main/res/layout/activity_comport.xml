<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ComportActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@color/beige"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="70dp"
            android:text="Comportamiento"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/my_image_view"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/timon"
                android:layout_marginTop="30dp" />
            <TextView
                android:id="@+id/nombreM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:text="Timón"/>
            <TextView
                android:id="@+id/edadM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"
                android:text="Comportamiento"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/rosaPastel" />
            <ScrollView
                android:id="@+id/mascotasVacunas"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_menu"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Apetito"
                            android:paddingTop="5dp"
                            android:textColor="@color/black"
                            android:layout_marginLeft="10dp"
                            android:textSize="15dp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/tierra" />


                        <RadioGroup
                            android:id="@+id/apetito"
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:paddingHorizontal="@dimen/hpRadioGroup"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp">

                            <RadioButton
                                android:layout_width="@dimen/radioButton"
                                android:layout_height="@dimen/radioButton"
                                android:textAlignment="center"
                                android:layout_marginHorizontal="@dimen/rbhm"
                                android:textColor="@color/black"
                                android:button = "@drawable/apmucho"
                                android:padding="20dp"
                                android:background="@drawable/circle_background" />

                            <RadioButton
                                android:layout_width="@dimen/radioButton"
                                android:layout_height="@dimen/radioButton"
                                android:textAlignment="center"
                                android:layout_marginHorizontal="@dimen/rbhm"
                                android:textColor="@color/black"
                                android:button="@drawable/apregular"
                                android:background="@drawable/circle_background" />

                            <RadioButton
                                android:layout_width="@dimen/radioButton"
                                android:layout_height="@dimen/radioButton"
                                android:textAlignment="center"
                                android:layout_marginHorizontal="@dimen/rbhm"
                                android:textColor="@color/black"
                                android:button="@drawable/appoco"
                                android:background="@drawable/circle_background" />

                            <RadioButton
                                android:layout_width="@dimen/radioButton"
                                android:layout_height="@dimen/radioButton"
                                android:textAlignment="center"
                                android:layout_marginHorizontal="@dimen/rbhm"
                                android:textColor="@color/black"
                                android:button="@drawable/apnada"
                                android:background="@drawable/circle_background" />

                        </RadioGroup>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_marginLeft="35dp"
                                android:textSize="15dp"
                                android:text="Mucho"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_marginLeft="30dp"
                                android:textSize="15dp"
                                android:text="Regular"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_marginLeft="33dp"
                                android:textSize="15dp"
                                android:text="Poco"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_marginLeft="35dp"
                                android:textSize="15dp"
                                android:text="Ninguno"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_menu"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sueño"
                            android:paddingTop="5dp"
                            android:textColor="@color/black"
                            android:layout_marginLeft="10dp"
                            android:textSize="15dp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/tierra" />

                        <RadioGroup
                            android:id="@+id/Sueño"
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp">

                            <RadioButton
                                android:layout_width="@dimen/radioButton"
                                android:layout_height="@dimen/radioButton"
                                android:textAlignment="center"
                                android:layout_marginHorizontal="@dimen/rbhm"
                                android:textColor="@color/black"
                                android:button="@drawable/zmucho"
                                android:paddingLeft="30dp"
                                android:background="@drawable/circle_background" />
                            <RadioButton
                                android:layout_width="@dimen/radioButton"
                                android:layout_height="@dimen/radioButton"
                                android:textAlignment="center"
                                android:layout_marginHorizontal="@dimen/rbhm"
                                android:textColor="@color/black"
                                android:button="@drawable/zregular"
                                android:background="@drawable/circle_background" />

                            <RadioButton
                                android:layout_width="@dimen/radioButton"
                                android:layout_height="@dimen/radioButton"
                                android:textAlignment="center"
                                android:layout_marginHorizontal="@dimen/rbhm"
                                android:textColor="@color/black"
                                android:button="@drawable/zpoco"
                                android:background="@drawable/circle_background"/>

                            <RadioButton
                                android:layout_width="@dimen/radioButton"
                                android:layout_height="@dimen/radioButton"
                                android:textAlignment="center"
                                android:layout_marginHorizontal="@dimen/rbhm"
                                android:textColor="@color/black"
                                android:button="@drawable/znada"
                                android:background="@drawable/circle_background" />

                        </RadioGroup>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_marginLeft="35dp"
                                android:textSize="15dp"
                                android:text="Mucho"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_marginLeft="30dp"
                                android:textSize="15dp"
                                android:text="Regular"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_marginLeft="30dp"
                                android:textSize="15dp"
                                android:text="Poco"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_marginLeft="35dp"
                                android:textSize="15dp"
                                android:text="Ninguno"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_menu"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estado de animo"
                            android:paddingTop="5dp"
                            android:textColor="@color/black"
                            android:layout_marginLeft="10dp"
                            android:textSize="15dp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/tierra" />

                        <RadioGroup
                            android:id="@+id/animo"
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:paddingHorizontal="@dimen/hpRadioGroup"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp">

                            <RadioButton
                                android:layout_width="@dimen/radioButton"
                                android:layout_height="@dimen/radioButton"
                                android:textAlignment="center"
                                android:layout_marginHorizontal="@dimen/rbhm"
                                android:textColor="@color/black"
                                android:button="@drawable/alegre"
                                android:background="@drawable/circle_background" />
                            <RadioButton
                                android:layout_width="@dimen/radioButton"
                                android:layout_height="@dimen/radioButton"
                                android:textAlignment="center"
                                android:layout_marginHorizontal="@dimen/rbhm"
                                android:textColor="@color/black"
                                android:button="@drawable/triste"
                                android:background="@drawable/circle_background" />

                            <RadioButton
                                android:layout_width="@dimen/radioButton"
                                android:layout_height="@dimen/radioButton"
                                android:textAlignment="center"
                                android:layout_marginHorizontal="@dimen/rbhm"
                                android:textColor="@color/black"
                                android:button="@drawable/enojado"
                                android:background="@drawable/circle_background" />
                            <RadioButton
                                android:layout_width="@dimen/radioButton"
                                android:layout_height="@dimen/radioButton"
                                android:textAlignment="center"
                                android:layout_marginHorizontal="@dimen/rbhm"
                                android:textColor="@color/black"
                                android:button="@drawable/aburrido"
                                android:background="@drawable/circle_background" />
                        </RadioGroup>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_marginLeft="30dp"
                                android:textSize="15dp"
                                android:text="Alegre"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_marginLeft="39dp"
                                android:textSize="15dp"
                                android:text="Triste"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_marginLeft="37dp"
                                android:textSize="15dp"
                                android:text="Enojado"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_marginLeft="25dp"
                                android:textSize="15dp"
                                android:text="Aburrido"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_menu"
                        android:orientation="vertical"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ladridos"
                            android:paddingTop="5dp"
                            android:textColor="@color/black"
                            android:layout_marginLeft="10dp"
                            android:textSize="15dp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/tierra" />


                        <RadioGroup
                            android:id="@+id/ladridos"
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:paddingHorizontal="@dimen/hpRadioGroup"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp">

                            <RadioButton
                                android:layout_width="@dimen/radioButton"
                                android:layout_height="@dimen/radioButton"
                                android:textAlignment="center"
                                android:layout_marginHorizontal="@dimen/rbhm"
                                android:textColor="@color/black"
                                android:button="@drawable/lamucho"
                                android:background="@drawable/circle_background" />
                            <RadioButton
                                android:layout_width="@dimen/radioButton"
                                android:layout_height="@dimen/radioButton"
                                android:textAlignment="center"
                                android:layout_marginHorizontal="@dimen/rbhm"
                                android:textColor="@color/black"
                                android:button="@drawable/laregular"
                                android:background="@drawable/circle_background" />

                            <RadioButton
                                android:layout_width="@dimen/radioButton"
                                android:layout_height="@dimen/radioButton"
                                android:textAlignment="center"
                                android:layout_marginHorizontal="@dimen/rbhm"
                                android:textColor="@color/black"
                                android:button="@drawable/lapoco"
                                android:background="@drawable/circle_background" />
                            <RadioButton
                                android:layout_width="@dimen/radioButton"
                                android:layout_height="@dimen/radioButton"
                                android:textAlignment="center"
                                android:layout_marginHorizontal="@dimen/rbhm"
                                android:textColor="@color/black"
                                android:button="@drawable/lanada"
                                android:background="@drawable/circle_background" />
                        </RadioGroup>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_marginLeft="30dp"
                                android:textSize="15dp"
                                android:text="Mucho"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_marginLeft="37dp"
                                android:textSize="15dp"
                                android:text="Regular"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_marginLeft="37dp"
                                android:textSize="15dp"
                                android:text="Poco"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_marginLeft="34dp"
                                android:textSize="15dp"
                                android:text="Ninguno"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

            <Button
                android:id="@+id/btn_confirmar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/azulPastel"
                android:radius="8dp"
                android:text="Confirmar"
                android:textColor="@color/black" />
        </LinearLayout>

    </ScrollView>




</LinearLayout>