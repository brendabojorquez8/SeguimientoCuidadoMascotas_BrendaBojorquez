<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NuevapetActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/beige">
        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_marginVertical="20dp"
            android:layout_gravity="center"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="60dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Nueva Masctoa\nEspecie"
            android:textSize="25dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginVertical="20dp"
        android:layout_gravity="center"
        android:background="@drawable/circle_background_especie"
        android:src="@drawable/duda" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/rosaPastel" />

    <GridView
        android:id="@+id/mascotas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="2"
        android:paddingHorizontal="6dp"
        android:layout_marginTop="10dp"/>

</LinearLayout>