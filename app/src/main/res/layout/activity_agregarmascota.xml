<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AgregarmascotaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@color/beige"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="70dp"
            android:text="Nueva Mascota\nEspecie"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageM"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginVertical="10dp"
        android:layout_gravity="center"
        android:padding="20dp"
        android:background="@drawable/circle_background_especie"
        android:src="@drawable/duda" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_corner"
        android:layout_marginBottom="15dp"
        android:paddingBottom="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp">

        <EditText
            android:id="@+id/nombre_mas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/rounded_corner"
            android:ems="10"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:hint="Nombre de la mascota"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginHorizontal="15dp"
            android:background="@color/rosaPastel" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/Salmon" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_corner"
                android:paddingBottom="15dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp">
                <EditText
                    android:id="@+id/et_fechana_mas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/rounded_corner"
                    android:gravity="center_horizontal"
                    android:paddingTop="10dp"
                    android:hint="Fecha nació dd/mm/yyyy"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@color/rosaPastel" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_corner"
                android:paddingBottom="15dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/et_raza_mas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/rounded_corner"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:hint="Raza"
                    android:inputType="text"
                    android:paddingTop="10dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@color/rosaPastel" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_corner"
                android:paddingBottom="15dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/et_tamaño_mas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/rounded_corner"
                    android:gravity="center_horizontal"
                    android:paddingTop="10dp"
                    android:hint="Tamaño"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@color/rosaPastel" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_corner"
                android:paddingBottom="15dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/et_alergia_mas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corner"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:hint="Alergia"
                    android:inputType="text"
                    android:paddingTop="10dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@color/rosaPastel" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_corner"
                android:paddingBottom="15dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp">
                <EditText
                    android:id="@+id/et_señas_mas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/rounded_corner"
                    android:gravity="center_horizontal"
                    android:paddingTop="10dp"
                    android:hint="Señas particulares"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@color/rosaPastel" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_corner"
                android:paddingBottom="15dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/et_historial_mas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/rounded_corner"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:hint="Historial Clinico"
                    android:inputType="text"
                    android:paddingTop="10dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@color/rosaPastel" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_corner"
                android:paddingBottom="15dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/et_veterinario_mas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/rounded_corner"
                    android:gravity="center_horizontal"
                    android:paddingTop="10dp"
                    android:hint="Veterinario"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@color/rosaPastel" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_corner"
                android:paddingBottom="15dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/et_contacto_mas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corner"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:hint="Contacto de emergencia"
                    android:inputType="phone"
                    android:paddingTop="10dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@color/rosaPastel" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_continuar"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="100dp"
                android:backgroundTint="@color/azulPastel"
                android:radius="8dp"
                android:text="Continuar"
                android:textColor="@color/black" />


        </LinearLayout>

    </ScrollView>



</LinearLayout>