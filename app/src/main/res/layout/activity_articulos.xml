<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ArticulosActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@color/beige"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="70dp"
            android:text="Articulos"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="370dp"
            android:layout_height="200dp"
            android:background="@color/rosaPastel"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aimentos venenosos"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="@color/black"/>

        <View
            android:layout_width="370dp"
            android:layout_height="200dp"
            android:background="@color/azulPastel"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cuidados en tiempos de calor"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="@color/black"/>

        <View
            android:layout_width="370dp"
            android:layout_height="200dp"
            android:background="@color/tierra"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Como saber cuando mi mascota estÃ¡ triste"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:textSize="20dp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btn_chat"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="30dp"
            android:backgroundTint="@color/azulPastel"
            android:radius="8dp"
            android:text="Conversar con la IA"
            android:textColor="@color/black" />
    </LinearLayout>



    </ScrollView>

</LinearLayout>